# Environment variables for the hockey email configuration
# Python ConfigParser file format

[HOCKEY_EMAIL]

# The name of the place you want to play
LOCATION_NAME=Tanks Park

# The "lat<space>lon" of the place you want to play
LAT_LON=39.53 -104.99

# The day of the week that you want to be playing hockey. The email will come out the day before (at the time you set up in the cron job)
DAY_OF_WEEK=3

# The email username
EMAIL_LOGIN=username

# The password for the email usernam
EMAIL_PASSWORD=password

EMAIL_TO=hockeyoutdoors@googlegroups.com

EMAIL_FROM=username@gmail.com


