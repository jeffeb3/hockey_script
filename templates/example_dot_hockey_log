[loggers]
keys=root,schedule_hockey,event_utils

[handlers]
keys=consoleHandler,logfileHandler

[formatters]
keys=simpleFormatter

[logger_root]
level=DEBUG
handlers=logfileHandler

[logger_event_utils]
level=DEBUG
handlers=logfileHandler
qualname=event_utils
propagate=0

[logger_schedule_hockey]
level=DEBUG
handlers=logfileHandler
qualname=schedule_hockey
propagate=0

[handler_logfileHandler]
class=handlers.RotatingFileHandler
level=DEBUG
formatter=simpleFormatter
args=("/home/pi/.hockey/hockey.log","a",10000,2)

[handler_consoleHandler]
class=StreamHandler
level=INFO
formatter=simpleFormatter
args=(sys.stdout,)

[formatter_simpleFormatter]
format=%(asctime)s - %(name)s - %(levelname)s - %(message)s
datefmt=
